{
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.jsx?$",
        "exclude": ["node_modules"]
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "destination": "docs/",
        "recurse": true,
        "readme": "README.md"
    }
}
